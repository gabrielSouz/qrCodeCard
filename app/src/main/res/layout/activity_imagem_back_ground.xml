<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.gabriel.qrcode.InputImgBackGroundURI">

    <TextView
            android:text="Card Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="121dp" android:layout_marginStart="121dp" android:layout_marginTop="62dp"
            android:id="@+id/textView" tools:text="Card Image"/>
    <Button
            android:text="File..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textView" android:layout_alignEnd="@+id/textView"
            android:layout_marginTop="20dp" android:id="@+id/buttonPick"/>

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonPick"
        android:layout_marginTop="66dp" />
    <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/buttonPick"
            android:layout_toRightOf="@+id/buttonPick" android:layout_toEndOf="@+id/buttonPick"
            android:id="@+id/buttonOK" tools:text="ok" android:visibility="visible" android:enabled="false"/>
</RelativeLayout>
